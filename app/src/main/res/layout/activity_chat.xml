<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/rectangle_1">


    <RelativeLayout
        android:id="@+id/People"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:orientation="horizontal"
        android:padding="5dp"
        android:background="@color/Button_color"
        android:theme="@style/Theme.AppCompat.Light.DarkActionBar">


        <Button
            android:id="@+id/Back"
            android:layout_width="20dp"
            android:layout_height="15dp"
            android:layout_centerVertical="true"
            android:layout_marginStart="10dp"
            android:background="@drawable/ic_back"
            android:onClick="Back_message"
            />

        <Button
            android:id="@+id/Account"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_alignStart="@+id/Back"
            android:layout_marginStart="60dp"
            android:background="@drawable/textview_custom" />

        <TextView
            android:id="@+id/textView2"
            android:layout_width="200dp"
            android:layout_height="40dp"
            android:layout_toEndOf="@+id/Account"
            android:layout_marginStart="10dp"
            android:text="Volodymyr Hlushko"
            android:textSize="14sp"
            android:fontFamily="@font/raleway"
            android:textColor="@color/black"
            android:gravity="center"
            />
    </RelativeLayout>



    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="500dp"
        android:layout_below="@+id/People">

    </ScrollView>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_alignParentBottom="true"
        android:gravity="top"
        android:orientation="horizontal">


        <EditText
            android:id="@+id/TextPeople"
            android:layout_width="290dp"
            android:layout_height="40dp"
            android:layout_marginStart="10dp"
            android:background="@drawable/textview_custom"
            android:fontFamily="@font/raleway"
            android:gravity="bottom"
            android:maxLength="1600"
            android:padding="10dp"
            android:textColor="@color/Standart_text_color"
            android:textSize="14sp"
            android:elevation="3dp" />

        <Button
            android:id="@+id/button"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_marginStart="10dp"
            android:background="@drawable/textview_custom"
            android:drawableStart="@drawable/ic_airplane"
            android:paddingLeft="10dp"
            android:paddingRight="10dp"
            android:elevation="2dp"
            android:onClick="PushMessage"
            />


    </LinearLayout>

</RelativeLayout>